{
  "name": "hermes",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "abi:sync": "pnpm --filter @hermes/contracts build && node scripts/sync-abi.mjs",
    "abi:check": "pnpm --filter @hermes/contracts build && node scripts/check-abi-sync.mjs",
    "verify": "pnpm abi:check && pnpm build && pnpm test",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "tsx": "^4.19.2",
    "turbo": "^2.0.6",
    "typescript": "^5.5.4"
  }
}
