{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**", "out/**"],
      "env": [
        "NEXT_PUBLIC_HERMES_API_URL",
        "NEXT_PUBLIC_HERMES_FACTORY_ADDRESS",
        "NEXT_PUBLIC_HERMES_USDC_ADDRESS",
        "NEXT_PUBLIC_HERMES_CHAIN_ID",
        "NEXT_PUBLIC_HERMES_RPC_URL",
        "NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID",
        "HERMES_PINATA_JWT"
      ]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    }
  }
}
